class Solution {
    public int removeDuplicates(int[] nums) {
        // If the array is empty, return 0
        if (nums.length == 0) return 0;
        
        // k is the index where the next unique element will be placed
        int k = 1;
        
        // Start from the second element and check for unique values
        for (int i = 1; i < nums.length; i++) {
            // If the current element is not the same as the previous one
            if (nums[i] != nums[i - 1]) {
                nums[k] = nums[i]; // Place it at the k-th position
                k++; // Increment k
            }
        }
        
        // Return the number of unique elements
        return k;
    }
}
