class Solution {
    public int[] twoSum(int[] arr, int target)
     {
        int num[] = new int [2];
        for (int i=0;i<arr.length;i++)
        {
            for (int j=0;j<arr.length;j++)
            {
                if (arr[i]+arr[j]==target && i!=j)
                {
                    num[0]=i;
                    num[1]=j;
                    return num ;
                }
            }
        }
        return num;
        }
    }
